@page
@model LoginModel
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.JSInterop
@{
 ViewData["Title"] = "Login";
}
<div class="row justify-content-center align-items-center vh-100">
		<div class="col-lg-4 p-4 border rounded shadow-sm">
			<div class="mb-4 text-center">
				<img src="~/css/login.png" alt="Freshdesk Logo" class="login-logo mb-4">
			<h3><b>Login</b></h3>
		 </div>
 <!-- Username input group with icon -->
		<div class="mb-3 input-group">
			<span class="input-group-text">
				<i class="oi oi-person"></i>
			</span>
				<input asp-for="Model.UserName" class="form-control" placeholder="Username" />
		</div>
 <!-- Password input group with icon -->
		<div class="mb-3 input-group">
			<span class="input-group-text">
				<i class="oi oi-lock-locked"></i>
			</span>
				<input asp-for="Model.Password" type="password" class="form-control" placeholder="Password" />
		</div>
			<div class="mb-3 d-grid gap-2">
				<button type="submit" class="btn btn-primary">Login</button>
		</div>
 <!-- Signup link -->
			<a href="/signup" class="signup-link">Create new account</a>
	</div>
</div>
